# E-commerce Agent Environment Variables

# Environment Configuration
NODE_ENV=production
LOG_LEVEL=info

# Platform API Keys
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com

WOOCOMMERCE_URL=https://your-woo-site.com
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret

AMAZON_ACCESS_KEY_ID=your_amazon_access_key
AMAZON_SECRET_ACCESS_KEY=your_amazon_secret_key
AMAZON_MARKETPLACE_ID=your_marketplace_id

EBAY_API_KEY=your_ebay_api_key
EBAY_CERT_ID=your_ebay_cert_id
EBAY_DEV_ID=your_ebay_dev_id
EBAY_USER_ID=your_ebay_user_id

# Database Configuration
DATABASE_URL=sqlite:./data/ecommerce.db

# Inventory Management
SYNC_INTERVAL=300000
LOW_STOCK_THRESHOLD=10
REORDER_POINT=50
MAX_STOCK_LEVEL=1000

# Price Monitoring
PRICE_CHECK_INTERVAL=3600000
PRICE_ALERT_THRESHOLD=5
COMPETITOR_MONITORING=true
MAX_COMPETITORS=10

# Order Processing
AUTO_FULFILLMENT=true
SHIPPING_INTEGRATION=true
CUSTOMER_NOTIFICATIONS=true
ORDER_STATUS_WEBHOOK=https://your-webhook.com/orders

# Notification Settings
EMAIL_FROM=noreply@yourcompany.com
EMAIL_TO=admin@yourcompany.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Performance Settings
MAX_CONCURRENT_SYNCS=5
API_RATE_LIMIT_PER_MINUTE=100
TIMEOUT=30000

# Security
ENCRYPTION_KEY=your_encryption_key_here
API_SECRET_KEY=your_api_secret_key

# Monitoring
HEALTH_CHECK_PORT=3000
METRICS_ENABLED=true
LOG_ROTATION=true

# Feature Flags
ENABLE_INVENTORY_SYNC=true
ENABLE_PRICE_MONITORING=true
ENABLE_ORDER_PROCESSING=true
ENABLE_CUSTOMER_SUPPORT=false
ENABLE_ANALYTICS_REPORTING=true

# Development
DEBUG_MODE=false
MOCK_API_CALLS=false
DRY_RUN=false