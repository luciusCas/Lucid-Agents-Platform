{
  "manifestVersion": "1.0.0",
  "agentInfo": {
    "id": "ecommerce-agent",
    "name": "E-commerce Automation Agent",
    "version": "1.0.0",
    "description": "Agent untuk automasi e-commerce, inventory management, dan price monitoring",
    "author": "Lucid Agents",
    "license": "MIT",
    "category": "ecommerce",
    "tags": ["ecommerce", "inventory", "pricing", "automation", "multichannel"]
  },
  "capabilities": {
    "platform_integration": {
      "enabled": true,
      "description": "Integrasi dengan multiple e-commerce platform",
      "platforms": [
        {
          "name": "Shopify",
          "features": ["products", "orders", "inventory", "customers"]
        },
        {
          "name": "WooCommerce",
          "features": ["products", "orders", "inventory", "analytics"]
        },
        {
          "name": "Amazon",
          "features": ["marketplace", "pricing", "inventory", "orders"]
        },
        {
          "name": "eBay",
          "features": ["listings", "inventory", "orders", "pricing"]
        }
      ]
    },
    "inventory_management": {
      "enabled": true,
      "description": "Manajemen inventori otomatis",
      "features": ["real_time_sync", "stock_monitoring", "low_stock_alerts", "reorder_points"]
    },
    "price_monitoring": {
      "enabled": true,
      "description": "Monitoring harga kompetitor",
      "features": ["competitor_tracking", "price_alerts", "dynamic_pricing", "profit_optimization"]
    },
    "order_processing": {
      "enabled": true,
      "description": "Otomatisasi pemrosesan pesanan",
      "features": ["auto_fulfillment", "shipping_integration", "status_updates", "customer_communication"]
    },
    "analytics_reporting": {
      "enabled": true,
      "description": "Analisis dan pelaporan",
      "features": ["sales_analytics", "performance_tracking", "custom_reports", "export_capabilities"]
    }
  },
  "configuration": {
    "runtime": {
      "node_version": ">=18.0.0",
      "memory_limit": "512MB",
      "cpu_limit": "1 core"
    },
    "monitoring": {
      "check_interval": 300000,
      "price_alerts": true,
      "stock_alerts": true
    }
  },
  "deployment": {
    "platforms": ["linux", "darwin", "win32"],
    "container": {
      "image": "node:18-alpine",
      "ports": [3000],
      "volumes": ["/app/data", "/app/logs"]
    }
  }
}