# Creative Content Agent Environment Variables

# Environment Configuration
NODE_ENV=production
LOG_LEVEL=info

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
STABILITY_API_KEY=your_stability_api_key_here

# Content Settings
CONTENT_OUTPUT_DIR=./output
MAX_CONTENT_SIZE=50MB
QUALITY_LEVEL=standard

# Automation Settings
BATCH_PROCESSING=true
SCHEDULED_GENERATION=false
AUTO_PUBLISH=false

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=5

# File Storage
STORAGE_PROVIDER=local
S3_BUCKET=your-s3-bucket
S3_REGION=us-east-1

# API Configuration
API_TIMEOUT=30000
API_BASE_URL=https://api.creative-agent.com

# Notification Settings
WEBHOOK_URL=https://your-webhook-url.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_NOTIFICATIONS=true
EMAIL_FROM=notifications@example.com
EMAIL_TO=admin@example.com

# Feature Flags
ENABLE_TEXT_GENERATION=true
ENABLE_IMAGE_GENERATION=true
ENABLE_VIDEO_CREATION=false
ENABLE_AUDIO_SYNTHESIS=false

# Quality Control
CONTENT_VALIDATION=true
AUTO_APPROVAL=false
MANUAL_REVIEW_REQUIRED=false

# Performance
MAX_MEMORY_USAGE=1GB
CPU_LIMIT=2
DISK_USAGE_LIMIT=10GB