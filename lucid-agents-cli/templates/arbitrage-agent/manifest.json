{
  "manifestVersion": "1.0.0",
  "agentInfo": {
    "id": "arbitrage-agent",
    "name": "Crypto Arbitrage Agent",
    "version": "1.0.0",
    "description": "Agent canggih untuk mengidentifikasi dan mengeksekusi peluang arbitrase cryptocurrency secara otomatis",
    "author": "Lucid Agents",
    "license": "MIT",
    "category": "trading",
    "tags": ["arbitrage", "cryptocurrency", "trading", "finance", "automation"]
  },
  "capabilities": {
    "exchange_integration": {
      "enabled": true,
      "description": "Integrasi dengan multiple exchange cryptocurrency",
      "supported_exchanges": [
        {
          "name": "Binance",
          "features": ["spot", "futures", "rest", "websockets", "sandbox"],
          "rate_limit": 1200,
          "fees": { "maker": 0.001, "taker": 0.001 }
        },
        {
          "name": "Coinbase Pro",
          "features": ["spot", "rest", "websockets"],
          "rate_limit": 100,
          "fees": { "maker": 0.005, "taker": 0.005 }
        },
        {
          "name": "Kraken",
          "features": ["spot", "rest", "websockets"],
          "rate_limit": 180,
          "fees": { "maker": 0.0016, "taker": 0.0026 }
        },
        {
          "name": "Bybit",
          "features": ["spot", "futures", "rest", "websockets"],
          "rate_limit": 600,
          "fees": { "maker": -0.00025, "taker": 0.00075 }
        }
      ]
    },
    "real_time_monitoring": {
      "enabled": true,
      "description": "Monitoring harga real-time dan deteksi peluang arbitrase",
      "update_frequency": "1s",
      "symbols_tracked": ["BTC/USDT", "ETH/USDT", "ADA/USDT", "DOT/USDT", "LINK/USDT"],
      "features": ["price_tickers", "order_books", "trade_streams", "volume_analysis"]
    },
    "arbitrage_detection": {
      "enabled": true,
      "description": "Algoritma deteksi peluang arbitrase otomatis",
      "min_profit_threshold": 0.5,
      "max_profit_threshold": 10.0,
      "confidence_scoring": true,
      "risk_assessment": true,
      "features": [
        "cross_exchange_arbitrage",
        "triangular_arbitrage",
        "funding_rate_arbitrage",
        "spatial_arbitrage"
      ]
    },
    "automated_trading": {
      "enabled": true,
      "description": "Eksekusi perdagangan arbitrase otomatis",
      "execution_speed": "< 100ms",
      "order_types": ["market", "limit", "stop"],
      "risk_management": {
        "position_sizing": true,
        "stop_loss": true,
        "take_profit": true,
        "max_drawdown": "5%",
        "max_position_size": "50% of balance"
      },
      "features": [
        "simultaneous_execution",
        "slippage_protection",
        "partial_fill_handling",
        "order_cancellation"
      ]
    },
    "risk_management": {
      "enabled": true,
      "description": "Sistem manajemen risiko canggih",
      "features": {
        "position_sizing": {
          "kelly_criterion": true,
          "fixed_fractional": true,
          "volatility_adjusted": true
        },
        "portfolio_protection": {
          "max_exposure": "20% per symbol",
          "diversification": "max 5 symbols simultaneously",
          "correlation_check": true
        },
        "execution_risk": {
          "slippage_check": true,
          "liquidity_check": true,
          "latency_monitoring": true
        }
      }
    },
    "performance_analytics": {
      "enabled": true,
      "description": "Analisis performa dan pelaporan",
      "metrics": [
        "total_return",
        "sharpe_ratio",
        "sortino_ratio",
        "max_drawdown",
        "win_rate",
        "profit_factor",
        "average_trade_time",
        "calmar_ratio"
      ],
      "reporting": {
        "real_time_dashboard": true,
        "daily_reports": true,
        "performance_charts": true,
        "trade_history": true
      }
    },
    "alert_system": {
      "enabled": true,
      "description": "Sistem alert dan notifikasi",
      "channels": ["email", "webhook", "slack", "telegram", "discord"],
      "triggers": [
        "high_profit_opportunity",
        "trade_executed",
        "trade_failed",
        "exchange_down",
        "high_spread_detected",
        "risk_limit_exceeded"
      ]
    }
  },
  "configuration": {
    "runtime": {
      "node_version": ">=18.0.0",
      "memory_limit": "1GB",
      "cpu_limit": "2 cores",
      "timeout": 300000
    },
    "trading": {
      "min_profit_threshold": 0.5,
      "max_trade_amount": 1000,
      "max_slippage": 0.1,
      "risk_level": "medium",
      "max_concurrent_trades": 3
    },
    "monitoring": {
      "update_interval": 1000,
      "price_history_limit": 1000,
      "alert_threshold": 1.0
    },
    "environment_variables": {
      "required": [],
      "optional": [
        "BINANCE_API_KEY",
        "BINANCE_SECRET",
        "COINBASE_API_KEY",
        "COINBASE_SECRET",
        "COINBASE_PASSPHRASE",
        "KRAKEN_API_KEY",
        "KRAKEN_SECRET",
        "WEBHOOK_URL",
        "SLACK_WEBHOOK_URL",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_CHAT_ID",
        "EMAIL_FROM",
        "EMAIL_TO"
      ]
    }
  },
  "deployment": {
    "platforms": ["linux", "darwin", "win32"],
    "container": {
      "image": "node:18-alpine",
      "ports": [3000],
      "volumes": ["/app/logs", "/app/data", "/app/secrets"]
    },
    "security": {
      "encrypted_secrets": true,
      "api_key_rotation": true,
      "ip_whitelisting": true
    },
    "health_check": {
      "path": "/health",
      "interval": 30,
      "timeout": 5
    }
  },
  "examples": [
    {
      "name": "Simple BTC Arbitrage",
      "description": "Monitoring arbitrase BTC antara Binance dan Coinbase",
      "config": {
        "symbols": ["BTC/USDT"],
        "exchanges": ["binance", "coinbase"],
        "min_profit": 0.5,
        "max_trade": 500
      }
    },
    {
      "name": "Multi-Exchange ETH Trading",
      "description": "Trading ETH arbitrase dengan 4 exchanges",
      "config": {
        "symbols": ["ETH/USDT", "ETH/BTC"],
        "exchanges": ["binance", "coinbase", "kraken", "bybit"],
        "min_profit": 0.3,
        "max_trade": 1000,
        "risk_level": "low"
      }
    },
    {
      "name": "High Frequency Arbitrage",
      "description": "Arbitrase frekuensi tinggi dengan latency rendah",
      "config": {
        "symbols": ["BTC/USDT", "ETH/USDT"],
        "exchanges": ["binance", "bybit"],
        "min_profit": 0.2,
        "max_trade": 200,
        "execution_speed": "ultra_fast"
      }
    }
  ],
  "limits": {
    "max_execution_time": 3600,
    "max_memory_usage": 512,
    "max_file_size": 100,
    "rate_limits": {
      "binance": { "requests_per_minute": 1200, "concurrent_trades": 5 },
      "coinbase": { "requests_per_minute": 100, "concurrent_trades": 3 },
      "kraken": { "requests_per_minute": 180, "concurrent_trades": 3 }
    }
  },
  "security": {
    "permissions": ["network", "filesystem", "process", "environment"],
    "restrictions": {
      "api_rate_limits": "enforced",
      "ip_whitelisting": "recommended",
      "2fa_required": true,
      "encrypted_storage": true
    },
    "data_protection": {
      "encryption": "AES-256",
      "key_rotation": "monthly",
      "secure_transmission": "TLS 1.3"
    }
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "interval": 10,
      "endpoints": ["/metrics", "/status", "/performance"]
    },
    "logging": {
      "level": "info",
      "format": "json",
      "rotation": {
        "enabled": true,
        "max_size": "50MB",
        "max_files": 10
      }
    },
    "alerts": {
      "system_health": true,
      "trade_failures": true,
      "profit_thresholds": true,
      "risk_violations": true
    }
  },
  "legal": {
    "disclaimer": "Trading cryptocurrency melibatkan risiko tinggi. Agent ini hanya untuk tujuan edukasi dan penelitian. Selalu lakukan riset sendiri sebelum melakukan perdagangan.",
    "compliance": {
      "kyc_required": "pada beberapa exchange",
      "tax_reporting": "berdasarkan yurisdiksi",
      "regulatory_awareness": "pengguna bertanggung jawab"
    }
  }
}