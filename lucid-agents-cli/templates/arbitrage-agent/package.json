{
  "name": "arbitrage-agent",
  "version": "1.0.0",
  "description": "Agent untuk mengidentifikasi dan mengeksekusi peluang arbitrase dalam perdagangan cryptocurrency dan aset digital",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "deploy": "npm run build && node scripts/deploy.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "backtest": "tsx src/backtest.ts"
  },
  "keywords": [
    "arbitrage",
    "trading",
    "cryptocurrency",
    "finance",
    "agent"
  ],
  "author": "Lucid Agents",
  "license": "MIT",
  "dependencies": {
    "@lucid-agents/core": "^1.0.0",
    "@lucid-agents/cli": "^1.0.0",
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "dotenv": "^16.3.0",
    "ccxt": "^4.0.0",
    "web3": "^4.2.0",
    "ethers": "^6.8.0",
    "coinbase-pro": "^1.0.2",
    "binance-api-node": "^0.12.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.6",
    "decimal.js": "^10.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.2.0",
    "tsx": "^4.6.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@types/node-cron": "^3.0.11"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}