# Environment Variables untuk Arbitrage Agent
# Copy file ini ke .env dan isi dengan nilai yang sesuai

# =============================================================================
# WALLET & PRIVATE KEY
# =============================================================================
# Private key untuk eksekusi transaksi arbitrase
# WARNING: Jangan pernah commit private key ke repository!
PRIVATE_KEY=your_private_key_here

# Wallet address (optional, untuk validasi)
WALLET_ADDRESS=0x...

# =============================================================================
# RPC ENDPOINTS
# =============================================================================
# Ethereum Mainnet RPC
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# BSC Mainnet RPC
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# Polygon Mainnet RPC
POLYGON_RPC_URL=https://polygon-rpc.com

# Arbitrum RPC
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Optimism RPC
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# =============================================================================
# API KEYS
# =============================================================================
# Alchemy API Key (untuk enhanced data)
ALCHEMY_API_KEY=your_alchemy_api_key

# Infura API Key (backup RPC)
INFURA_API_KEY=your_infura_api_key

# CoinGecko API Key (untuk price data)
COINGECKO_API_KEY=your_coingecko_api_key

# Moralis API Key (untuk blockchain data)
MORALIS_API_KEY=your_moralis_api_key

# =============================================================================
# KONFIGURASI ARBITRASE
# =============================================================================
# Minimum profit threshold dalam USD
MIN_PROFIT_THRESHOLD=50

# Maximum slippage percentage
MAX_SLIPPAGE=2.0

# Default gas price dalam Gwei
DEFAULT_GAS_PRICE_GWEI=25

# Maximum gas limit per transaksi
MAX_GAS_LIMIT=300000

# Gas price multiplier untuk urgent trades
GAS_PRICE_MULTIPLIER=1.5

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Maximum position size dalam USD
MAX_POSITION_SIZE=10000

# Maximum daily loss dalam USD
MAX_DAILY_LOSS=1000

# Stop loss percentage
STOP_LOSS_PERCENT=5.0

# Maximum trades per day
MAX_TRADES_PER_DAY=50

# Risk level (conservative, moderate, aggressive)
RISK_LEVEL=moderate

# =============================================================================
# DEX CONFIGURATION
# =============================================================================
# Enable/disable specific DEX
UNISWAP_ENABLED=true
SUSHISWAP_ENABLED=true
PANCAKESWAP_ENABLED=true
CURVE_ENABLED=true
BALANCER_ENABLED=true

# DEX API Endpoints (optional overrides)
UNISWAP_API_URL=https://api.thegraph.com/subgraphs/name/uniswap/uniswap-v2
SUSHISWAP_API_URL=https://api.thegraph.com/subgraphs/name/sushiswap/exchange
PANCAKESWAP_API_URL=https://api.thegraph.com/subgraphs/name/pancakeswap/exchange

# =============================================================================
# MONITORING & ALERTS
# =============================================================================
# Enable monitoring
MONITORING_ENABLED=true

# Discord webhook untuk alerts
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Telegram bot token dan chat ID
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
ALERT_EMAIL=alerts@your-domain.com

# =============================================================================
# LOGGING & DEBUG
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug mode
DEBUG_MODE=false

# Log file path
LOG_FILE_PATH=./logs/arbitrage.log

# Maximum log file size dalam MB
MAX_LOG_SIZE=100

# Number of log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# DATABASE
# =============================================================================
# Database URL untuk storing trade data
DATABASE_URL=postgresql://user:password@localhost:5432/arbitrage

# Redis URL untuk caching
REDIS_URL=redis://localhost:6379

# =============================================================================
# PERFORMANCE
# =============================================================================
# Request timeout dalam milliseconds
REQUEST_TIMEOUT=10000

# Rate limit untuk API calls per minute
API_RATE_LIMIT=100

# Connection pool size
CONNECTION_POOL_SIZE=10

# Cache TTL dalam seconds
CACHE_TTL=30

# =============================================================================
# SECURITY
# =============================================================================
# JWT secret untuk API authentication
JWT_SECRET=your_jwt_secret_here

# API key untuk external access
API_KEY=your_api_key_here

# Enable HTTPS
ENABLE_HTTPS=false

# SSL certificate path (jika enable HTTPS)
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable MEV protection
MEV_PROTECTION=true

# Enable flash loan support
FLASH_LOAN_ENABLED=false

# Enable cross-chain arbitrage
CROSS_CHAIN_ENABLED=true

# Enable advanced strategies
ADVANCED_STRATEGIES=false

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=development

# Port untuk server
PORT=3000

# Host untuk binding
HOST=0.0.0.0

# Enable clustering
CLUSTER_ENABLED=false

# Number of worker processes
WORKER_PROCESSES=4

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Webhook untuk trade notifications
TRADE_WEBHOOK_URL=https://hooks.your-domain.com/trades

# Analytics service API key
ANALYTICS_API_KEY=your_analytics_key

# Cloud storage untuk logs
CLOUD_STORAGE_BUCKET=arbitrage-logs
CLOUD_STORAGE_ACCESS_KEY=your_access_key
CLOUD_STORAGE_SECRET_KEY=your_secret_key

# =============================================================================
# TESTING
# =============================================================================
# Test mode (true untuk testing tanpa real trades)
TEST_MODE=false

# Simulation mode (predict profits tanpa eksekusi)
SIMULATION_MODE=false

# Testnet network untuk testing
TESTNET_RPC_URL=https://goerli.infura.io/v3/YOUR_KEY

# Mock data untuk testing
MOCK_DATA_ENABLED=false