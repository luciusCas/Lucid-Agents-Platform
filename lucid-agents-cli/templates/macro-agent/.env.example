# ===========================================
# Macro Automation Agent Environment Variables
# ===========================================

# Environment Configuration
NODE_ENV=production
LOG_LEVEL=info

# Agent Configuration
MAX_CONCURRENT_TASKS=5
RETRY_ATTEMPTS=3
TIMEOUT=300000
TASK_TIMEOUT=60000

# Browser Configuration (for web automation)
# Set custom browser path if needed
# BROWSER_PATH=/usr/bin/chromium
# BROWSER_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome

# API Configuration
API_BASE_URL=https://api.example.com
API_TIMEOUT=30000
API_KEYS=your_api_keys_here

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/macro_agent
# REDIS_URL=redis://localhost:6379

# Notification Configuration
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@example.com
# EMAIL_PASSWORD=your_email_password
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Monitoring and Health Check
HEALTH_CHECK_PORT=3000
METRICS_PORT=9090
ENABLE_METRICS=true

# File System Configuration
LOGS_DIR=./logs
DATA_DIR=./data
TEMP_DIR=./tmp
MAX_LOG_SIZE=10MB
MAX_LOG_FILES=5

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Proxy Configuration (if needed)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# SSL/TLS Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# SSL_REJECT_UNAUTHORIZED=true

# Webhook Configuration
# WEBHOOK_SECRET=your_webhook_secret
# WEBHOOK_SIGNATURE_HEADER=X-Webhook-Signature

# Feature Flags
ENABLE_WEB_AUTOMATION=true
ENABLE_API_INTEGRATION=true
ENABLE_WORKFLOW_ORCHESTRATION=true
ENABLE_DATA_PROCESSING=true
ENABLE_FILE_OPERATIONS=true
ENABLE_NOTIFICATIONS=true
ENABLE_SCHEDULING=true

# Advanced Configuration
# MAX_MEMORY_USAGE=512MB
# CPU_LIMIT=1
# DISK_USAGE_LIMIT=1GB
# NETWORK_TIMEOUT=30000

# Development/Testing (only for development)
# DEBUG=true
# MOCK_API_RESPONSES=false
# SKIP_SSL_VERIFICATION=false
# DRY_RUN=false