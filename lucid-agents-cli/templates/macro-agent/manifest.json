{
  "manifestVersion": "1.0.0",
  "agentInfo": {
    "id": "macro-agent",
    "name": "Macro Automation Agent",
    "version": "1.0.0",
    "description": "Agent canggih untuk mengotomatisasi tugas-tugas berulang dan alur kerja kompleks",
    "author": "Lucid Agents",
    "license": "MIT",
    "category": "automation",
    "tags": ["macro", "automation", "workflow", "productivity", "batch-processing"]
  },
  "capabilities": {
    "web_automation": {
      "enabled": true,
      "description": "Automasi browser untuk tugas-tugas web",
      "features": ["click", "type", "screenshot", "form-filling", "navigation"],
      "browser_support": ["chromium", "firefox", "webkit"]
    },
    "api_integration": {
      "enabled": true,
      "description": "Integrasi dengan REST APIs",
      "features": ["get", "post", "put", "delete", "authentication", "rate-limiting"],
      "timeout": 30000
    },
    "workflow_orchestration": {
      "enabled": true,
      "description": "Orkestrasi workflow kompleks",
      "features": ["sequential", "parallel", "conditional", "retry", "error-handling"]
    },
    "data_processing": {
      "enabled": true,
      "description": "Pemrosesan dan transformasi data",
      "features": ["csv", "json", "xml", "filtering", "aggregation", "validation"]
    },
    "scheduling": {
      "enabled": true,
      "description": "Penjadwalan tugas",
      "features": ["cron", "interval", "delayed", "recurring"]
    },
    "file_operations": {
      "enabled": true,
      "description": "Operasi file dan direktori",
      "features": ["read", "write", "copy", "move", "delete", "compress"]
    },
    "notification": {
      "enabled": true,
      "description": "Sistem notifikasi",
      "features": ["email", "webhook", "slack", "discord", "telegram"]
    }
  },
  "configuration": {
    "runtime": {
      "node_version": ">=18.0.0",
      "memory_limit": "512MB",
      "cpu_limit": "1 core",
      "timeout": 300000
    },
    "defaults": {
      "max_concurrent_tasks": 5,
      "retry_attempts": 3,
      "task_timeout": 60000,
      "log_level": "info"
    },
    "environment_variables": {
      "required": [],
      "optional": [
        "NODE_ENV",
        "LOG_LEVEL",
        "MAX_CONCURRENT_TASKS",
        "TIMEOUT",
        "BROWSER_PATH",
        "API_KEYS"
      ]
    }
  },
  "deployment": {
    "platforms": ["linux", "darwin", "win32"],
    "container": {
      "image": "node:18-alpine",
      "ports": [3000],
      "volumes": ["/app/logs", "/app/data"]
    },
    "health_check": {
      "path": "/health",
      "interval": 30,
      "timeout": 5
    }
  },
  "examples": [
    {
      "name": "Web Scraping Example",
      "description": "Contoh penggunaan untuk scraping data dari website",
      "task": {
        "type": "web-automation",
        "config": {
          "url": "https://example.com",
          "actions": [
            { "type": "wait", "selector": ".content" },
            { "type": "screenshot", "path": "screenshot.png" }
          ]
        }
      }
    },
    {
      "name": "API Monitoring",
      "description": "Contoh pemantauan API secara berkala",
      "task": {
        "type": "api-call",
        "config": {
          "method": "GET",
          "url": "https://api.example.com/status"
        }
      }
    },
    {
      "name": "Data Processing Pipeline",
      "description": "Contoh pipeline pemrosesan data",
      "task": {
        "type": "workflow",
        "config": {
          "steps": [
            {
              "name": "Load Data",
              "type": "file-operation",
              "config": { "action": "read", "path": "data.csv" }
            },
            {
              "name": "Process Data",
              "type": "data-processing",
              "config": { "processor": "transform" }
            },
            {
              "name": "Save Result",
              "type": "file-operation",
              "config": { "action": "write", "path": "result.json" }
            }
          ]
        }
      }
    }
  ],
  "limits": {
    "max_execution_time": 1800,
    "max_memory_usage": 256,
    "max_file_size": 100,
    "rate_limit": {
      "requests_per_minute": 60,
      "concurrent_tasks": 5
    }
  },
  "security": {
    "permissions": ["network", "filesystem", "process"],
    "restrictions": {
      "max_redirects": 5,
      "user_agent": "MacroAgent/1.0.0",
      "follow_redirects": true
    }
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "interval": 60,
      "endpoints": ["/metrics", "/status"]
    },
    "logging": {
      "level": "info",
      "format": "json",
      "rotation": {
        "enabled": true,
        "max_size": "10MB",
        "max_files": 5
      }
    }
  }
}