{
  "name": "game-agent",
  "version": "1.0.0",
  "description": "Agent untuk automasi game, testing, dan monitoring performa game",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "deploy": "npm run build && node scripts/deploy.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "playtest": "tsx src/playtest.ts"
  },
  "keywords": [
    "gaming",
    "automation",
    "testing",
    "performance",
    "agent"
  ],
  "author": "Lucid Agents",
  "license": "MIT",
  "dependencies": {
    "@lucid-agents/core": "^1.0.0",
    "@lucid-agents/cli": "^1.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "puppeteer": "^21.5.0",
    "playwright": "^1.40.0",
    "ws": "^8.14.0",
    "node-pty": "^0.11.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "sharp": "^0.33.0",
    "robotjs": "^0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/jest": "^29.5.0",
    "@types/puppeteer": "^5.4.0",
    "typescript": "^5.2.0",
    "tsx": "^4.6.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@types/node-pty": "^0.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}